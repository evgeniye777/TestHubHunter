<?xml version="1.0" encoding="utf-8"?>



<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recomend_object_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7.5dp"
    android:paddingBottom="7.5dp"
    android:paddingLeft="@dimen/menu_margin_vacancies"
    android:paddingRight="@dimen/menu_margin_vacancies"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/img_shell_for_vacancies"
    android:tint="@color/cardview_dark_background"
    android:scaleType="fitXY">
</ImageView>
    <LinearLayout
        android:id="@+id/click_vacation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_watching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Сейчас просматривают 1 человек"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15.5sp" />

        <TextView
            android:id="@+id/text_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UI/UX Designer"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Минск"
            android:textSize="15.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Мобирикс"
                android:textSize="15.5sp" />

            <ImageView
                android:id="@+id/image_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2.5dp"
                android:paddingTop="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_accordance" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_experience"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_experience" />

            <TextView
                android:id="@+id/text_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Опыт от 1 года до 3 лет"
                android:textSize="15.5sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_published"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Опубликовано 20 февраля"
            android:textColor="@color/my_gray"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/image_like"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_heart"
        android:layout_gravity="end"/>
    <Button
        android:id="@+id/but_respond"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/style_but_respond"
        android:text="Откликнуться"
        android:textAllCaps="false"
        android:layout_gravity="bottom"
        android:textSize="16sp"></Button>
</FrameLayout>